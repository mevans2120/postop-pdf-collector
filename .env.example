# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Database Configuration
# For SQLite (development)
# DATABASE_URL=sqlite:///./data/postop_collector.db

# For PostgreSQL (production)
DATABASE_URL=postgresql://user:password@localhost:5432/postop_collector

# Google Search API (optional)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Collection Settings
OUTPUT_DIRECTORY=./output
MAX_PDFS_PER_SOURCE=10
MAX_PAGES_PER_SITE=50
MAX_FILE_SIZE_MB=50
MAX_REQUESTS_PER_SECOND=2.0
REQUEST_TIMEOUT=30

# Processing Configuration
ENABLE_OCR=false
EXTRACT_IMAGES=true
EXTRACT_TABLES=true

# Quality Control
MIN_CONFIDENCE_SCORE=0.5
MIN_TEXT_LENGTH=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/postop_collector.log

# Advanced Options
USER_AGENT=PostOpPDFCollector/1.0
VERIFY_SSL=true
# PROXY_URL=http://proxy.example.com:8080

# Redis Cache (optional)
# REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
# SENTRY_DSN=https://xxx@sentry.io/xxx
# PROMETHEUS_PORT=9090